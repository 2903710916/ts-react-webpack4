{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": false,
        "baseUrl": "./src",
        "rootDirs": ["./src"],
        "jsx": "react",
        "alwaysStrict": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "lib": [
            "esnext",
            "es7",
            "es6",
            "es5",
            "es2015.promise",
            "es2015.generator",
            "dom"
        ],
        "typeRoots": ["node", "node_modules/@types"]
    }
}
